<body>
    <script>
        function recharge(amount){
            if(amount<10){
                console.log('Minimum recharge is 10');
            }else if(amount >5000){
                console.log('Maximum recharge exceeded');
            }else{
                console.log('Recharge successfully');
            }
        }
        recharge(5);
    </script>
