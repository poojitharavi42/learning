package programs;

public class Sweth {
	//write the code for sum of digits
	public static int sumOfDigits(int n) {
		int sum=0;
		while(n>0) {
			int digit=n%10;
			sum=sum+digit;
			n=n/10;
		}
		System.out.println("Sum of digits:" + sum);
		return sum;
	}
	//write a code to reverse the number
	public static int reverseOfNumber(int n) {
		int rev=0;
		while(n>0) {
			int digit=n%10;
			rev=rev*10+digit;
			n=n/10;
		}
		System.out.println("The Reversed String:" + rev);
		return rev;
	}