class Doctor:
    def __init__(self,name,department):
        self.name=name
        self.department=department
    def doctor_info(self):
        print(f"Name:{self.name},Department:{self.department}")
class Surgeon(Doctor):
    def __init__(self,name,department,experience_years):
        super().__init__(name,department)
        self.experience_years=experience_years
    def details(self):
        print(f"Name:{self.name},Department:{self.department}")
        print(f"Years of experience:{self.experience_years}")
class Dentist(Doctor):
    def __init__(self,name,department,specialization):
        super().__init__(name,department)
        self.specialization=specialization
    def details(self):
        print(f"Name:{self.name},Department:{self.department}")
        print(f"Specialization name:{self.specialization}")
obj1=Surgeon("Dr.Poojitha","Surgery","12 years")
obj2=Dentist("Dr.Anurag","Dental","Root Canal")
print(obj1.details())
print(obj2.details())